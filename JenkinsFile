pipeline {
    agent any

    environment {
        firstStudent = "noviembre"
        secondStudent = "Octubre"
        thirdStudent = "Diciembre"
    }

    parameters {
        text(name: 'TEACHER_NAME', defaultValue: 'LUISA', description: 'name of the teacher')
    }

    stages {
        stage('first student task') {
            steps {
                echo "${params.TEACHER_NAME} sent ${firstStudent} to count from 1 to 4:1"
                echo "${params.TEACHER_NAME} sent ${firstStudent} to count from 1 to 4:2"
                echo "${params.TEACHER_NAME} sent ${firstStudent} to count from 1 to 4:3"
                echo "${params.TEACHER_NAME} sent ${firstStudent} to count from 1 to 4:4"
            }
        }
        stage('Execute') {
            steps {
                echo 'Cooking'
            }
        }
        stage('Post') {
            steps {
                echo 'dessert'
            }
        }
    }
}
